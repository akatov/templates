{
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/refs/heads/main/schemas/devContainer.schema.json",

  "name": "akatov/templates",

  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  "workspaceMount": "source=${localWorkspaceFolder},target=/code,type=bind,consistency=cached",
  "workspaceFolder": "/code",
  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer/.claude,target=/home/node/.claude,type=bind,consistency=delegated",
    "target=/code/node_modules,type=volume"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "dprint.dprint",
        "dbaeumer.vscode-eslint",
        "effectful-tech.effect-vscode",
        "esbenp.prettier-vscode",
        "vitest.explorer"
      ]
    }
  },

  "features": {
    "ghcr.io/anthropics/devcontainer-features/claude-code:1.0": {}
  },

  "runArgs": ["--env-file", "${localWorkspaceFolder}/.devcontainer/devcontainer.env"]
}
