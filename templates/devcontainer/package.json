{
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "chrome": "chromium --remote-debugging-port=9222 --headless=new --no-sandbox --disable-gpu --no-first-run 2>&1",
    "check": "tsc --build",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "eslint",
    "test": "vitest"
  },
  "devDependencies": {
    "@packages/lib-typescript": "workspace:*",
    "@effect/vitest": "0.27.0",
    "@ianvs/prettier-plugin-sort-imports": "4.7.0",
    "@types/node": "24.10.9",
    "effect": "3.19.14",
    "npm-check": "6.0.1",
    "prettier": "3.8.0",
    "prettier-plugin-tailwindcss": "0.7.2",
    "vitest": "4.0.17"
  },
  "pnpm": {
    "overrides": {
      "vitest": "4.0.17"
    },
    "patchedDependencies": {}
  }
}
